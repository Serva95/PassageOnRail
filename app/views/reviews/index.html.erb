<div class="col-2 col-4-mobilep ">
  <%= link_to 'Back', user_path(params[:format]), class: "button icon solid fa-chevron-left"%>
</div>
<div class="col-3 col-8-mobilep">
  <h2>Recensioni</h2>
</div>
<div class="col-7 col-12-mobilep">
  <%= link_to 'Scrivi una recensione a '+@user.nome + ' ' + @user.cognome, new_review_path(params[:format]), {class: 'button'} %>
</div>
<hr class="col-12 col-12-mobilep">

<% unless @reviews.nil?
     @reviews.each do |review| %>
    <div class="col-12 col-12-mobilep">
      <%= review.user.nome %> in data: <%= review.data.strftime("%d-%m-%Y alle: %H:%M:%S") %>
    </div>
    <div class="col-12 col-12-mobilep">
      voto: <%= review.vote %> su 5
    </div>
    <div class="col-12 col-12-mobilep">
      <h4><strong><%= review.commento %></strong></h4>
    </div>
    <div class="col-12 col-12-mobilep"><br></div>
    <!--<td><= link_to 'Show', review %></td>
    <td><= link_to 'Edit', edit_review_path(review) %></td>
    <td><= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
  <% end
     end%>