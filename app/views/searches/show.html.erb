<div class="col-6 col-12-narrower">
  <h2>
  <strong>Risultati ricerca semplice</strong>
  </h2>
</div>


<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_routes.empty? %>

  <p>No records found</p>

<%else %>
  <table>
    <thead>
    <tr>
      <th>Città di partenza</th>
      <th>Luogo di ritrovo</th>
      <th>Data e ora di partenza</th>
      <th>Città di arrivo</th>
      <th>Tempo di percorrenza</th>
      <th>Costo</th>
      <th>Comfort</th>
      <th>Rating guidatore</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
  <% @search.search_routes.each do |c| %>
      <tr>
        <td><%= c.citta_partenza %></td>
        <td><%= c.luogo_ritrovo %></td>
        <td><%= c.data_ora_partenza.strftime("%d/%m/%y %R") %></td>
        <td><%= c.citta_arrivo %></td>
        <td><%= c.ore %> ore <%=c.min %> minuti</td>
        <td><%= c.costo %></td>
        <td><%= c.comfort %></td>
        <td><%= c.rating_medio %></td>
       </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<% if !@search.hide_multitrip %>

<h2>Risultati ricerca viaggi multi tratta</h2>

<% if @search.multi_routes_search.empty? %>

  <p>Non sono disponibili viaggi multi tratta</p>

<%else %>
  <table>
    <thead>
    <tr>
      <th>Città di partenza</th>
      <th>Data e ora di partenza</th>
      <th>Tappa intermedia</th>
      <th>Città di arrivo</th>
      <th>Costo totale</th>
      <th>Durata complessiva</th>
      <th>Comfort</th>
      <th>Rating guidatori</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @search.multi_routes_search.each do |c| %>
      <tr>
        <td><%= c.c_part %></td>
        <td><%= c.part.strftime("%d/%m/%y %R") %></td>
        <td><%= c.tappa %></td>
        <td><%= c.c_arr %></td>
        <td><%= c.c_tot %></td>
        <td><%= c.ore %> ore <%= c.min % 60 %> minuti</td>
        <td><%= c.comfort_medio %></td>
        <td><%= c.rat %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<% end %>