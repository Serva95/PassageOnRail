<div class="col-6 col-12-narrower">
  <h2>
  <strong>Risultati ricerca semplice</strong>
  </h2>
</div>


<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_routes.empty? %>

  <p>No records found</p>

<%else %>
  <table>
    <thead>
    <tr>
      <th>Città di partenza</th>
      <th>Luogo di ritrovo</th>
      <th>Data e ora di partenza</th>
      <th>Città di arrivo</th>
      <th>Data e ora di arrivo</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
  <% @search.search_routes.each do |c| %>
      <tr>
        <td><%= c.citta_partenza %></td>
        <td><%= c.luogo_ritrovo %></td>
        <td><%= c.data_ora_partenza %></td>
        <td><%= c.citta_arrivo %></td>
        <td><%= c.data_ora_arrivo %></td>
        <td><%= c.costo %></td>
       </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<h2>Risultati ricerca viaggi multi tratta</h2>

<% if @search.multi_routes_search.empty? %>

  <p>Non sono disponibili viaggi multi tratta</p>

<%else %>
  <table>
    <thead>
    <tr>
      <th>Città di partenza</th>
      <th>Luogo di ritrovo</th>
      <th>Data e ora di partenza</th>
      <th>Città di arrivo</th>
      <th>Data e ora di arrivo</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @search.multi_routes_search.each do |c| %>
      <tr>
        <td><%= c.citta_partenza %></td>
        <td><%= c.luogo_ritrovo %></td>
        <td><%= c.data_ora_partenza %></td>
        <td><%= c.citta_arrivo %></td>
        <td><%= c.data_ora_arrivo %></td>
        <td><%= c.costo %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

