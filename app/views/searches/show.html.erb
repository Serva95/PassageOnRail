<h1>Risultati ricerca semplice</h1>

<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_routes.empty? %>

  <p>No records found</p>

<%else %>
  <table>
    <thead>
    <tr>
      <th>Citta partenza</th>
      <th>Luogo ritrovo</th>
      <th>Data ora partenza</th>
      <th>Citta arrivo</th>
      <th>Data ora arrivo</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
  <% @search.search_routes.each do |c| %>
      <tr>
        <td><%= c.citta_partenza %></td>
        <td><%= c.luogo_ritrovo %></td>
        <td><%= c.data_ora_partenza %></td>
        <td><%= c.citta_arrivo %></td>
        <td><%= c.data_ora_arrivo %></td>
        <td><%= c.costo %></td>
       </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

