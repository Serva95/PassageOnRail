<div class="col-12 col-12-narrower">
  <h2>
    <strong>Ecco i tuoi veicoli!</strong>
  </h2>
</div>

<table>
  <thead>
    <tr>
      <th>Targa</th>
      <th>Marca</th>
      <th>Modello</th>
      <th>Tipo di mezzo</th>
      <th>Immatricolazione</th>
      <th>Comfort</th>
      <th>Posti</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.targa %></td>
        <td><%= vehicle.marca %></td>
        <td><%= vehicle.modello %></td>
        <td><%= vehicle.tipo_mezzo %></td>
        <td><%= vehicle.immatricolazione.strftime("%d/%m/%y") %></td>
        <td><%= vehicle.comfort %></td>
        <td><%= vehicle.posti %></td>
        <td><%= link_to 'Show', driver_vehicle_path(@driver, vehicle) %></td>
        <td><%= link_to 'Edit', edit_driver_vehicle_path(@driver, vehicle) %></td>
        <td><%= link_to 'Destroy', [@driver, vehicle], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi un veicolo', new_driver_vehicle_path %>
<%= link_to 'Back', driver_path(@driver) %>
