<h3>Ratings</h3>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @ratings.nil?
         @ratings.each do |rating| %>
      <tr>
        <td><%= rating.data %></td>
        <td><%= rating.rating %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end
    end%>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path, {class: 'button'} %>
