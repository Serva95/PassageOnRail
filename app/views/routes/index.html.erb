<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<div class="col-6 col-12-narrower">
  <%= form_tag routes_path, :method => 'get' do  %>
    <%= label_tag :'citta di partenza' %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Cerca tratta" %>
  <%end %>
</div>

<%= link_to "Ricerca semplice filtri", new_search_path %>


<table>
  <thead>
    <tr>
      <th>Citta partenza</th>
      <th>Luogo ritrovo</th>
      <th>Data ora partenza</th>
      <th>Citta arrivo</th>
      <th>Data ora arrivo</th>
      <th>Costo</th>
      <th>Tempo di percorrenza</th>
      <th>Posti gi√† prenotati</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.citta_partenza %></td>
        <td><%= route.luogo_ritrovo %></td>
        <td><%= route.data_ora_partenza %></td>
        <td><%= route.citta_arrivo %></td>
        <td><%= route.data_ora_arrivo %></td>
        <td><%= route.costo %></td>
        <td><%= route.tempo_percorrenza %></td>
        <td><%= route.n_passeggeri %></td>
        <td><button><%= link_to 'Prenota ora!', booking_route_path(route)%></button></td>
        <!--<td>%= link_to 'Edit', edit_route_path(route) %</td>-->
        <!--td%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %/td>-->
      </tr>
    <% end %>
  </tbody>
</table>

