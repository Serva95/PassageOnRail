<!--Pagina di registrazione nuovo utente-->

<div class="col-12 col-12-narrower">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row gtr-uniform">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="col-4 col-12-narrower">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (minimo 6 caratteri)" %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password" %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :username, placeholder: "Username", :autocomplete => :off %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :nome, placeholder: "Nome"  %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :cognome, placeholder: "Cognome"  %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :data_di_nascita, placeholder: "Data di Nascita", onfocus: "(this.type='date')", onblur: "(this.type='text')" %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :cellulare, placeholder: "Cellulare"  %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.text_field :indirizzo, placeholder: "Indirizzo" %>
    </div>
    <div class="col-4 col-12-narrower">
      <%= f.label :"Carica una foto" %>
      <%= f.file_field :avatar %>
    </div>
    <div class="col-12 col-12-narrower">
      <%= f.hidden_field :deleted %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
  <hr>
<% end %>

<%= render "users/shared/links" %>