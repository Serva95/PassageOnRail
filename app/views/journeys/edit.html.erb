<% if @checked %>
  <div class="col-12 col-12-narrower">
  <h2> Ops!</h2>
  </div>
  <div class="col-12 col-12-narrower">
  <h3>Sembra che tu abbia già controllato questa richiesta!</h3>
  </div>

<%else %>
<!--Dati dell'autostoppista-->
<div class="row gtr-uniform">
  <h4 class="image col-12 col-12-narrower">
    <%if @user.avatar.url == nil%>
      <%= image_tag 'images/default.jpeg' , size: "160"%>
    <%else %>
      <%=image_tag(@user.avatar.url, size: "160") %>
    <%end %>
  </h4>
  <h4 class="col-4 col-12-narrower">
    <strong>Nome:</strong>
    <%= @user.nome %>
  </h4>
  <h4 class="col-4 col-12-narrower">
    <strong>Cognome:</strong>
    <%= @user.cognome %>
  </h4>
  <h4 class="col-4 col-12-narrower">
    <strong>Username:</strong>
    <%= @user.username %>
  </h4>
  <h4 class="col-4 col-12-narrower">
    <strong>Email:</strong>
    <%= @user.email %>
  </h4>
  <div class="col-6 col-12-narrower">
    <h4><strong>Rating medio autostoppista</strong></h4>
    <%if @user.hitch_hiker_rating==nil %>
      Nessuna valutazione presente!
    <%else %>
      <%=@user.hitch_hiker_rating.round(2)%>
    <%end %>
  </div>
</div>
<div class="col-12 col-12-mobilep"><br></div>
<div class="col-12 col-12-mobilep"><br></div>
<div class="row gtr-uniform">
  <div class="col-12 col-12-mobilep" style="overflow: auto;">
    <table>
      <caption><h3><strong>Tratta richiesta</strong></h3></caption>
      <thead>
      <tr>
        <th>Città di Partenza</th>
        <th>Luogo di ritrovo</th>
        <th>Data e ora partenza</th>
        <th>Città di arrivo</th>
      </tr>
      </thead>
      <tbody>
          <tr>
            <td><%= @route.citta_partenza %></td>
            <td><%= @route.luogo_ritrovo %></td>
            <td><%= @route.data_ora_partenza.strftime("%d/%m/%y, %H:%M") %></td>
            <td><%= @route.citta_arrivo %></td>

            <td><%= link_to 'Dettagli', driver_route_path(current_user.driver_id, @route.id), class: "button" %></td>
          </tr>
        <tr>
          <td colspan="8"></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-12 col-12-mobilep"><br></div>
</div>
<div class="row gtr-uniform">
  <div class="col-12 col-12-mobile">

  <%= link_to 'Accetta', route_journey_path(@route, @journey, :accept => "true" ), method: :patch, class: "button", title: 'Accetta' %>
  <%= link_to 'Rifiuta', route_journey_path(@route, @journey, :accept => "false"), method: :patch, class: "button", title: 'Rifiuta'%>

  </div>
</div>
  <%end %>

