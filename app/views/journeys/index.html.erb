
<h2><strong>Richieste di prenotazione</strong></h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
        <% journey.stages.each do |stage| %>
          <tr>
            <td>
              <%= journey.user.username%> vorrebbe percorrere la tua stessa <%=link_to 'Tratta', edit_route_journey_path(stage.route, journey)%>!
            </td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>
