<h3>Chat con <%=  %></h3>

<table>
  <thead>
    <tr>
      <th>Data ora</th>
      <th>Testo</th>
      <th>Mittente</th>
      <th>Destinatario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messagges.each do |messagge| %>
      <tr>
        <td><%= messagge.data_ora %></td>
        <td><%= messagge.testo %></td>
        <td><%= messagge.mittente %></td>
        <td><%= messagge.destinatario %></td>
        <td><%= link_to 'Edit', edit_chat_messagge_path(messagge.chat_id, messagge.id) %></td>
        <td><%= link_to 'Destroy', chat_messagge_path(messagge.chat_id, messagge.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Messagge', new_chat_messagge_path, {class: 'button'}%>
